<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Meal History - HealthyLife</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="css/mealHistory.css" />
</head>
<body>
    <div id="page">
        <%- include('../partials/header') %>
        <div id="content">
            <div>
                <h1>Meal History</h1>
                <p>Welcome to your Meal History page! Here you can view a record of the meals you've consumed over time.</p>
                
                <form id="filter-form" class="filter-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="start-date">Start Date:</label>
                            <input type="date" id="start-date" name="startDate" required>
                        </div>

                        <div class="form-group">
                            <label for="end-date">End Date:</label>
                            <input type="date" id="end-date" name="endDate" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="meal-type">Meal Type:</label>
                            <select id="meal-type" name="mealType">
                                <option value="all">All</option>
                                <option value="breakfast">Breakfast</option>
                                <option value="lunch">Lunch</option>
                                <option value="dinner">Dinner</option>
                                <option value="snack">Snack</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="View History" class="submit-button">
                        </div>
                    </div>
                </form>

                <!-- כפתור חדש לצפייה בכל הארוחות -->
                <button id="view-all-history">View All Meals</button>

                <table class="meal-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Meal Type</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Meal Date</th>
                            <th>Blood Sugar</th>
                            <th>Food Sugar</th>
                            <th>Is Holiday</th>
                            <th>User ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be dynamically generated here -->
                    </tbody>
                </table>

                <p>If you have any further questions or need assistance, don't hesitate to reach out. We are here for you!</p>
            </div>
        </div>
        <%- include('../partials/footer') %>
    </div>

    <script>
        // פונקציה לשליפת היסטוריית הארוחות עם סינון
        document.getElementById('filter-form').addEventListener('submit', function(event) {
            event.preventDefault(); // מונע את שליחת הטופס הרגילה

            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
            const mealType = document.getElementById('meal-type').value;

            // שליחת בקשה לשרת
            fetch(/api/meals/history?startDate=${startDate}&endDate=${endDate}&mealType=${mealType})
                .then(response => response.json())
                .then(data => {
                    const tableBody = document.querySelector('.meal-table tbody');
                    tableBody.innerHTML = ''; // נקה את התוכן הקיים

                    // הוספת הנתונים לטבלה
                    data.forEach(meal => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${meal.id}</td>
                            <td>${meal.mealType}</td>
                            <td>${meal.description}</td>
                            <td><img src="${meal.image}" alt="${meal.mealType}" style="width: 50px; height: auto;"></td>
                            <td>${meal.mealDate}</td>
                            <td>${meal.bloodSugar}</td>
                            <td>${meal.foodSugar}</td>
                            <td>${meal.isHoliday ? 'Yes' : 'No'}</td>
                            <td>${meal.userId}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                })
                .catch(error => console.error("Error fetching meals:", error));
        });

        // פונקציה לצפייה בכל הארוחות
        document.getElementById('view-all-history').addEventListener('click', function() {
            fetch('/api/meals/history/all') // קריאה ל-API שהוספת
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    const tableBody = document.querySelector('.meal-table tbody');
                    tableBody.innerHTML = ''; // נקה את התוכן הקיים

                    // הוספת הנתונים לטבלה
                    data.forEach(meal => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${meal.id}</td>
                            <td>${meal.mealType}</td>
                            <td>${meal.description}</td>
                            <td><img src="${meal.image}" alt="${meal.mealType}" style="width: 50px; height: auto;"></td>
                            <td>${meal.mealDate}</td>
                            <td>${meal.bloodSugar}</td>
                            <td>${meal.foodSugar}</td>
                            <td>${meal.isHoliday ? 'Yes' : 'No'}</td>
                            <td>${meal.userId}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                })
                .catch(error => console.error("Error fetching meals:", error));
        });
    </script>
</body>
</html>
